		<framework src="UIKit.framework" weak="true"/>
		<framework src="QuartzCore.framework" weak="true"/>
		<framework src="CoreGraphics.framework" weak="true"/>
		<framework src="ImageIO.framework" weak="true"/>

        <header-file src="src/ios/CDVPDFViewer.h" />
        <source-file src="src/ios/CDVPDFViewer.m" />

        <header-file src="src/ios/CDVPDFViewerViewController.h" />
        <source-file src="src/ios/CDVPDFViewerViewController.m" />
		<source-file src="src/ios/CDVPDFViewerViewController.xib" />

        <header-file src="src/ios/ReaderViewController.h" />
        <source-file src="src/ios/ReaderViewController.m" />

        <header-file src="src/ios/ReaderDocument.h" />
