<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0" id="pdfviewer" version="1.0.0">
    <name>CDVPDFViewer</name>
    <author>Dev Team (http://www.knowlodge.com.br/)</author>
    
    <keywords>cordova, pdf</keywords>

    <engines>
        <engine name="cordova" version=">=3.0" />
    </engines>

    <platform name="ios">

        <config-file target="config.xml" parent="/*">
            <feature name="CDVPDFViewer">
                <param name="ios-package" value="CDVPDFViewer"/>
            </feature>
        </config-file>

